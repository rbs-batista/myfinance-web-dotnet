@model PlanoContaModel

@{
    ViewData["Title"] = "Registrar de Transações";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Transacao" asp-action="Cadastro" method="post">
    <div class="container">

        <div class="mb-3">
            <label class="form-label" for="txtData">Data</label>
            <input type="date" id="txtData" class="form-control" asp-for="Data" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtValor">Valor</label>
            <input type="number" id="txtValor" class="form-control" asp-for="Valor" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtData">Item Plano Conta</label>
            @Html.DropDownListFor(m => m.PlanoContaId, Model.PlanoContas, new { @class="from-select"})
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtHistorico">Histórico</label>
            <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
            <input type="text" id="txtHistorico" class="form-control" asp-for="Histórico" />
        </div>
        
        @* <div class="mb-3">
            <label>@Html.RadioButtonFor(m => m.Tipo, "D") Despesa </label>
            <label>@Html.RadioButtonFor(m => m.Tipo, "R") Receita </label>
        </div> *@

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">Cancelar</button>
        </div>

    </div>
</form>


<script>
    function Voltar () {
        console.log("Voltar: ");
        window.location.href = "/Transacao/Index";
    }
</script>
